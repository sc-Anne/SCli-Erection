{
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "outDir": "dist",
        "target": "ES5",
        "paths": {
            "@": ["./src"],
            "@utils": ["./src/utils"],
            "@config": ["./src/config"],
            "@commands": ["./src/commands"]
        }
    }
}
  